{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "functions",
    "ignore": [
      "firebase.json", 
      ".firebaserc",
      "**/node_modules/**",
      ".gitignore"
    ],
    "rewrites": [{
      "source": "**",
      "function": "api"
    }]
  }
}
